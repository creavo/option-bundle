<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">


    <services>
        <service id="crv.option" alias="creavo_option.settings"/>
        
        <service id="crv_option.command.get" class="Creavo\OptionBundle\Command\CrvObGetCommand">
            <tag name="console.command" />
        </service>

        <service id="crv_option.command.set" class="Creavo\OptionBundle\Command\CrvObSetCommand">
            <tag name="console.command" />
        </service>

        <service id="creavo_option.settings" class="Creavo\OptionBundle\Provider\Settings">
            <argument type="service" id="doctrine" />
            <argument></argument>
            <argument></argument>
        </service>

        <service id="creavo_option.twig.option_extension" class="Creavo\OptionBundle\Twig\OptionExtension">
            <tag name="twig.extension" />
            <argument type="service" id="creavo_option.settings" />
        </service>
    </services>

</container>
